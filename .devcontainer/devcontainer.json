{
  "name": "Poort8 Docs",
  "image": "mcr.microsoft.com/devcontainers/ruby:3.3",
  "features": {
    "ghcr.io/devcontainers/features/ruby:1": {
      "version": "3.3.8"
    }
  },
  "postCreateCommand": "bundle install --jobs 4 --retry 3 && git config --global core.editor \"code --wait\"",
  "customizations": {
    "vscode": {
      "extensions": [
        "rebornix.Ruby",
        "sissel.shopify-liquid",
        "davidanson.vscode-markdownlint",
        "editorconfig.editorconfig",
        "eamodio.gitlens"
      ],
      "settings": {
        "files.exclude": {
          "**/.jekyll-cache": true,
          "**/_site": true
        },
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "jekyll.tabs": {
          "serve": "bundle exec jekyll serve --source docs --livereload --incremental",
          "build": "bundle exec jekyll build --source docs --trace"
        },
        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "git.autofetch": true
      }
    }
  },
  "remoteUser": "vscode"
}
